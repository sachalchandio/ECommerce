                        </div>
                    </div>
                </div>
               
                </div>
                <div class="col-md-9">
                  
                <%= line_chart [ {name: "Products", data: Product.group_by_day(:created_at).count}],
                 :id => "stats", :library => {hAxis: {title: "Time"}, vAxis: {title: "Product Creation"}, title: "Times of creation of objects"}%> 
                 
                 <%= line_chart Product.group_by_day(:created_at).count %>
                 
                 <%= column_chart Product.group_by_day_of_week(:created_at, format: "%a").count %>
                 
                 Column Chart for Orders
                 <%= column_chart Order.group_by_day(:created_at).count %>
                 
                 Area Chart for Orders
                 <%= area_chart Order.group_by_day(:created_at).count %>

                 Area Chart for LineItem
                 <%= area_chart LineItem.group_by_day(:created_at).count %>
                 
                 </div>
            </div>
        </div>
    </div>
